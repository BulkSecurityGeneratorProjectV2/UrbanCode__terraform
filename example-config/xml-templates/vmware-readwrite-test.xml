<?xml version="1.0" encoding="UTF-8"?>

<uprolib:environment xmlns:uprolib="com.urbancode.uprovision.tasks.vmware"
env-name="uc-vmw-test-1" 
dest-path="/Urbancode/kas-test" 
datastore-path="/Urbancode/vm-dev1-2" 
host-path="/Urbancode/vm-dev1.urbancode.com"
folder-name="uc-vmw-test-1">
    <uprolib:network network-name="my-net-web" port-count="32"/>
    <uprolib:security-group name="default-group">
        <uprolib:port-range first-port="22" last-port="80"/>
        <uprolib:port-range first-port="3306" last-port="3306"/>
        <uprolib:port-range first-port="8080" last-port="9090"/>
    </uprolib:security-group>

    <uprolib:clone instance-name="router-1"
              image-path="/Urbancode/cloud/router-dev-snapshot"
              snapshot-name="initial-snapshot"
              poweredOn="false">
        <uprolib:network-ref network-name="my-net-web" nic-index="1"/>
    </uprolib:clone>
              
    <uprolib:clone instance-name="instance-1"
              image-path="/Urbancode/cloud/linux-ud-agent-snapshot"
              snapshot-name="initial-snapshot"
              poweredOn="false"
              assign-host-ip="true">
        <uprolib:security-group-ref name="default-group"/>
        <uprolib:network-ref network-name="my-net-web" nic-index="0"/>
    </uprolib:clone>
    
</uprolib:environment>